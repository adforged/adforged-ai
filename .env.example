# ============================================================================
# AdForge AI - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Application
# ----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=https://adforged.ai
NEXT_PUBLIC_APP_NAME="AdForge AI"

# ----------------------------------------------------------------------------
# Supabase
# ----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ----------------------------------------------------------------------------
# OpenAI (for script generation)
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key

# ----------------------------------------------------------------------------
# Video Generation Providers
# ----------------------------------------------------------------------------
# HeyGen (temporary, until Sora 2)
HEYGEN_API_KEY=your-heygen-api-key

# Sora 2 (future API)
# SORA_API_KEY=your-sora-api-key

# Sora Automation (Personal Testing Only - Cypress)
# SORA_EMAIL=your-sora-email@gmail.com
# SORA_PASSWORD=your-sora-password
# SORA_URL=https://sora.com

# ----------------------------------------------------------------------------
# Stripe (for payments & subscriptions)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs
STRIPE_PRICE_CREATOR_MONTHLY=price_creator_monthly_id
STRIPE_PRICE_CREATOR_YEARLY=price_creator_yearly_id
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_id
STRIPE_PRICE_AGENCY_MONTHLY=price_agency_monthly_id
STRIPE_PRICE_AGENCY_YEARLY=price_agency_yearly_id

# ----------------------------------------------------------------------------
# Voice Providers (optional, for voice synthesis)
# ----------------------------------------------------------------------------
# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Azure Cognitive Services
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# AWS Polly (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ----------------------------------------------------------------------------
# Email (for notifications)
# ----------------------------------------------------------------------------
# Resend
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=noreply@adforged.ai

# ----------------------------------------------------------------------------
# Analytics (optional)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_GA_ID=G-your-google-analytics-id
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ----------------------------------------------------------------------------
# Development
# ----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug
